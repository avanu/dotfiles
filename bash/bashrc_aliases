# vim:ft=sh

# misc
alias dv='echo -e "\033[1;30m────────────────────────────────────────────────────────────────────────────────\033[0m"'
alias wtf='echo -e "\033[1;35m           _    __\n          | |  / _|\n __      _| |_| |_\n \ \ /\ / / __|  _|\n  \ V  V /| |_| |\n   \_/\_/  \__|_|\033[0m\n"'
alias cdl='cd && clear'

# navigation
alias ll='echo -en " \033[1;33m--> \033[0m" && echo -n $PWD && echo -e "\033[1;33m <-- \033[0m" && ls -lh'
alias la='ll -a'
alias ls='ls -G' # recursive calls (using ls in alias calls the aliased ls)

# grep
alias grep='grep --color=auto'


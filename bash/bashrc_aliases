#alias dockcheck='dv && docker ps -a && dv && docker images -a && dv'
#alias dockclean='docker rm -vf `docker ps -qa` && dockcheck'
#alias dockwipe='docker rmi -f `docker images -q` && dockcheck'
alias docker-cleanup='(docker rm -f $(docker ps -a -q); docker rmi -f $(docker images -q))'

